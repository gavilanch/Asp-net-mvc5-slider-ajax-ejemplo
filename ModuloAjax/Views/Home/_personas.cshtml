@model List<Persona>

@if (Model.Count == 0)
{
    <p>No existen resultados para mostrar.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <td>Nombre</td>
                <td>Identificación</td>
                <td>Edad</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var persona in Model)
            {
                <tr>
                    <td>@persona.Nombre</td>
                    <td>@persona.Cedula</td>
                    <td>@persona.Edad</td>
                </tr>
            }
        </tbody>
    </table>

}